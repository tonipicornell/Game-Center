<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameCenter"
    android:background="@color/black">

    <TextView
        android:id="@+id/title_game_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome \n USER!"
        android:textColor="@color/white"
        android:textSize="20pt"
        android:gravity="center"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:id="@+id/game_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/title_game_center"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/breakout_button"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logobreakout"/>

        <ImageView
            android:id="@+id/game2048_button"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo2048"/>
    </LinearLayout>

    <Button
        android:id="@+id/see_active_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/active_users_text"
        android:backgroundTint="@color/grey"
        android:layout_below="@id/game_center"
        android:layout_marginTop="40dp"
        android:layout_centerInParent="true"/>
</RelativeLayout>